<%= form_with model:Group do |f| %>
  <%= render partial: 'shared/navbar', locals: {navbar_title: 'ADD CATEGORY', left_button: groups_path, right_button: 'Search' } %>
  
  <section class="flex flex-col m-auto py-4 gap-4 bg-[#F0F2F1] pb-32 pt-20 mt-2">
  
  <div class="field">
    <%= f.text_field :name, placeholder: 'Name', value: '', required: true, class: "w-full border-gray-200" %>
  </div>
  
  <div class="p-4 bg-white flex flex-col gap-2">
    <%= f.label :icon %>
    <%= f.file_field :icon %>
  </div>
      
  <div class="fixed bottom-0 w-full items-center justify-center bg-secondary p-4 border-t-2 border-gray-400 shadow-md">
    <%= f.submit "Create Category", class: "block w-full p-4 text-center uppercase bg-transparent border-2 border-white text-white" %>
  </div>
<%end%>
</section>
