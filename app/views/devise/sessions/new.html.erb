<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render partial: 'shared/navbar', locals: { navbar_title: 'Log In', left_button: 'Back', right_button: f.submit("Log in") } %>
    
    <section class="flex flex-col m-auto py-4 gap-4 bg-[#F0F2F1] pb-32 pt-20 mt-2 h-[100vh]">
  
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " Email", class: "w-full border-gray-200" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: " Password", class: "w-full border-gray-200" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
<% end %>

  <div class="w-full text-center">
    <%= render "devise/shared/links" %>
  </div>
</section>
